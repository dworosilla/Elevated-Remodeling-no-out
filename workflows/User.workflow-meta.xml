<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>i360__Send_New_User_Email</fullName>
        <description>Send New User Email</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>i360__Templates_Users/i360__New_User_Email_Template</template>
    </alerts>
    <rules>
        <fullName>i360__Send Welcome Email for New Users</fullName>
        <actions>
            <name>i360__Send_New_User_Email</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <description>This workflow rule sends a welcome email to new users of improveit! 360 when their user record is created and / or activated.</description>
        <formula>IsActive = TRUE &amp;&amp; ISCHANGED(IsActive) &amp;&amp; not(isnull( Email ))</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
</Workflow>
