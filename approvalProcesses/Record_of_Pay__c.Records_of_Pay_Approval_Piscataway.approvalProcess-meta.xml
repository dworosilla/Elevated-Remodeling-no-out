<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Employee__c</field>
        <field>Name</field>
        <field>Date__c</field>
        <field>Appointment__c</field>
        <field>Margin__c</field>
        <field>Adjusted_Close_Price__c</field>
        <field>Sale_Status__c</field>
        <field>Pay_Type__c</field>
        <field>Base_Pay_Amount__c</field>
        <field>Base_Commission_Amount__c</field>
        <field>Daily_Bonus_Amount__c</field>
        <field>Margin_Bonus_Amount__c</field>
        <field>Self_Gen_Commission_Amount__c</field>
        <field>Sign_On_Bonus_Amount__c</field>
        <field>Monthly_Bonus_Amount__c</field>
        <field>Yearly_Bonus__c</field>
        <field>Number_of_Appointments__c</field>
        <field>Market_Segment__c</field>
        <field>Sale__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Record_of_Pay_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>bharperjr@elevatedremodeling.net</name>
                <type>user</type>
            </approver>
            <approver>
                <name>brandond.elevatedremodeling@gmail.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>dworosilla@elevatedremodeling.net</name>
                <type>user</type>
            </approver>
            <approver>
                <name>erobbins@elevatedremodeling.com</name>
                <type>user</type>
            </approver>
            <approver>
                <name>mhughes@elevatedremodeling.net</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Waiting for Approval</label>
        <name>Waiting_for_Approval</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND( TEXT( Employee__r.Market_Segment2__c ) = &quot;Piscataway, NJ&quot;,
OR(
Sale_Status_Changed__c = TRUE,
AND(
TEXT(Pay_Type__c) = &quot;Base Pay&quot;,
TEXT(Status__c) = &quot;Estimated&quot;,
OR(
Number_of_Appointments__c != null, Number_of_Days_Worked__c != null
)
),
AND(
TEXT(Pay_Type__c) = &quot;Sign-On Bonus&quot;,
TEXT(Status__c) = &quot;Estimated&quot;
),
AND(
TEXT(Status__c) = &quot;Sale Canceled - Needs Approval&quot;,
NOT(ISBLANK(Record_of_Pay_Being_Adjusted__c))
),
AND(
OR(
Timeframe__c = &quot;Day&quot;,
Timeframe__c = &quot;Weekly&quot;,
Timeframe__c = &quot;BiWeekly&quot;,
Timeframe__c = &quot;Monthly&quot;,
Timeframe__c = &quot;Yearly&quot;
),
TEXT(Status__c) = &quot;Estimated&quot;
),
AND(
TEXT(Pay_Type__c) = &quot;No Demo Appointment&quot;,
TEXT(Status__c) = &quot;Estimated&quot;
)
)
)</formula>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Approved_Checkbox_Update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Status_to_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Waiting_for_Approval_Status_Change</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Records of Pay Approval - Piscataway</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
